@model sistemaFacturacion.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";

    // Función para normalizar el porcentaje (3% puede estar como 3 o 0.03)
    Func<decimal, decimal> normalizarPorcentaje = p => p > 1 ? p / 100 : p;

    // Normalizamos los porcentajes
    var porcentajeIVA = normalizarPorcentaje(Model.AlicuotaIVA);
    var porcentajeImpInt = Model.TieneImpuestoInterno ? normalizarPorcentaje(Model.PorcentajeImpuestoInterno) : 0;

    // Cálculos correctos
    var totalImpuestos = porcentajeIVA + porcentajeImpInt;
    var neto = Model.Precio / (1 + totalImpuestos);
    var iva = neto * porcentajeIVA;
    var impuestoInterno = neto * porcentajeImpInt;
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">
                <i class="fas fa-box-open me-2"></i> @Model.Nombre
            </h2>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8">@Model.CodigoBarras ?? "N/A"</dd>

                        <dt class="col-sm-4">Precio:</dt>
                        <dd class="col-sm-8">@Model.Precio.ToString("C")</dd>

                        <dt class="col-sm-4">Stock:</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>

                        <dt class="col-sm-4">Alerta Stock:</dt>
                        <dd class="col-sm-8">@Model.AlertaStockMinimo</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <div class="card border-primary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Desglose Fiscal</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-5">IVA:</dt>
                                <dd class="col-sm-7">@((porcentajeIVA * 100).ToString("0.##"))%</dd>

                                <dt class="col-sm-5">Neto:</dt>
                                <dd class="col-sm-7">@neto.ToString("C")</dd>

                                <dt class="col-sm-5">Monto IVA:</dt>
                                <dd class="col-sm-7">@iva.ToString("C")</dd>

                                @if (Model.TieneImpuestoInterno)
                                {
                                    <dt class="col-sm-5">Imp. Interno:</dt>
                                    <dd class="col-sm-7">@((porcentajeImpInt * 100).ToString("0.##"))% (@impuestoInterno.ToString("C"))</dd>
                                }

                                <dt class="col-sm-5">Total:</dt>
                                <dd class="col-sm-7 fw-bold">@Model.Precio.ToString("C")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-3">
                <i class="fas fa-edit me-2"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
        </div>
    </div>
</div>