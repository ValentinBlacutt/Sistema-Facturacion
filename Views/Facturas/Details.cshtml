@model sistemaFacturacion.Models.Factura

@{
    ViewData["Title"] = "Detalles de Factura";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0">
                <i class="fas fa-file-invoice me-2"></i> Factura #@Model.Id
            </h2>
        </div>

        <div class="card-body">
            <!-- Información general -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="text-primary">
                        <i class="fas fa-calendar-alt me-2"></i> Fecha
                    </h5>
                    <p>@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6 text-end">
                    <h5 class="text-primary">
                        <i class="fas fa-money-bill-wave me-2"></i> Total
                    </h5>
                    <h3>@Model.Total.ToString("C")</h3>
                </div>
            </div>

            <!-- Desglose de impuestos -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card border-primary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-receipt me-2"></i> Desglose Fiscal
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6 class="text-muted">Neto Gravado</h6>
                                    <p>@Model.Detalles.Sum(d => d.Neto * d.Cantidad).ToString("C")</p>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="text-muted">IVA 21%</h6>
                                    <p>@Model.Detalles.Sum(d => d.MontoIVA * d.Cantidad).ToString("C")</p>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="text-muted">Imp. Internos</h6>
                                    <p>@Model.Detalles.Sum(d => d.MontoImpuestoInterno * d.Cantidad).ToString("C")</p>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detalle de productos -->
            <h5 class="text-primary mb-3">
                <i class="fas fa-boxes me-2"></i> Productos
            </h5>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Producto</th>
                            <th class="text-end">Cantidad</th>
                            <th class="text-end">P. Unitario</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-end">Desglose</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.Detalles)
                        {
                            <tr>
                                <td>@detalle.Producto.Nombre</td>
                                <td class="text-end">@detalle.Cantidad</td>
                                <td class="text-end">@detalle.PrecioUnitario.ToString("C")</td>
                                <td class="text-end">@((detalle.Cantidad * detalle.PrecioUnitario).ToString("C"))</td>
                                <td class="small text-muted">
                                    Neto: @detalle.Neto.ToString("C")<br>
                                    IVA: @detalle.MontoIVA.ToString("C")<br>
                                    @if (detalle.MontoImpuestoInterno > 0)
                                    {
                                        <span>Int: @detalle.MontoImpuestoInterno.ToString("C")</span>
                                
                                        <br>
                                    }
                                  
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <button class="btn btn-primary" onclick="window.print()">
                <i class="fas fa-print me-2"></i> Imprimir
            </button>
        </div>
    </div>
</div>