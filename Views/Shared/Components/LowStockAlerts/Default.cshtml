@model List<sistemaFacturacion.Models.Producto>

<!-- Verificamos si hay productos con bajo stock -->
@if (Model != null && Model.Count > 0)
{
    <!-- Mostramos una lista con estilo de Bootstrap -->
    <ul class="list-group list-group-flush">
        @foreach (var producto in Model)
        {
            <!-- Convertimos cada elemento de la lista en un enlace a la vista de Detalles -->
            <a asp-action="Details" asp-controller="Productos" asp-route-id="@producto.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <!-- Icono para el producto y nombre -->
                    <i class="fas fa-box me-2 text-danger"></i>
                    <strong>@producto.Nombre</strong>
                </div>
                <!-- Badge con el stock actual -->
                <span class="badge bg-danger rounded-pill">
                    @producto.Stock
                </span>
            </a>
        }
    </ul>
    <div class="dropdown-divider"></div>
    <a href="@Url.Action("Index", "Productos")" class="dropdown-item text-center text-primary">
        Ver todos los productos
    </a>
}
else
{
    <!-- Mensaje si no hay alertas de stock bajo -->
    <div class="text-center text-muted p-2">
        <i class="fas fa-check-circle me-2 text-success"></i> No hay alertas de stock bajo
    </div>
}
